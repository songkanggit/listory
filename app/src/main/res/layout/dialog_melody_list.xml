<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp286">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp50">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/colorF4F5F7"
        android:layout_above="@id/tv_close"/>
    <TextView
        android:id="@+id/tv_close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp49"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="@string/app_close"
        android:textSize="@dimen/sp15"
        android:textColor="@color/color666666"
        android:background="@drawable/button_press_effect"/>
</RelativeLayout>