<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/activity_login_bg"
    tools:context="com.listory.songkang.activity.LoginActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorTransparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp">
        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="12dp"
            android:layout_marginLeft="-5dp"
            android:layout_gravity="left"
            android:src="@mipmap/activity_login_back"/>
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="-1"
            android:textStyle="bold"
            android:text="@string/activity_login_title"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp20"/>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/activity_login_logo"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="@dimen/dp45"
        android:layout_marginLeft="@dimen/dp28"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_marginTop="@dimen/dp60"
        android:layout_marginRight="@dimen/dp27"
        android:layout_marginLeft="@dimen/dp27"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp10"
            android:src="@mipmap/activity_login_telephone"/>
        <EditText
            android:id="@+id/edit_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activity_login_hint_telephone"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp18"
            android:inputType="phone"
            android:background="@color/colorTransparent"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginTop="@dimen/dp15"
        android:background="@color/colorWhite"/>
    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp10"
            android:src="@mipmap/activity_login_code"/>
        <EditText
            android:id="@+id/edit_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:hint="@string/activity_login_hint_code"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp18"
            android:inputType="number"
            android:background="@color/colorTransparent"/>
        <TextView
            android:id="@+id/tv_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="@string/activity_login_send"
            android:textColor="@color/colorFBC600"
            android:textSize="@dimen/sp15"
            android:background="@drawable/rectangle_rc_trans"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginTop="@dimen/dp15"
        android:background="@color/colorWhite"/>
    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginTop="@dimen/dp22"
        android:text="@string/activity_login_title"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp18"
        android:textStyle="bold"
        android:background="@drawable/rectangle_rc_fbc600"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_third_party"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp23"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_wechat"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_marginRight="@dimen/dp40"
            android:src="@mipmap/activity_login_wechat"/>
        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_marginLeft="@dimen/dp40"
            android:src="@mipmap/activity_login_alipay"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_third_party"
        android:layout_marginBottom="@dimen/dp28"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp50"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_login_third_login"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp14"
            android:gravity="center"
            android:background="@color/colorTransparent"/>
        <TextView
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp1"
            android:layout_marginRight="@dimen/dp50"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>
