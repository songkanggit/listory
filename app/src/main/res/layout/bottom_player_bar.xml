<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="85dp"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp13"
        android:paddingTop="@dimen/dp6"
        android:paddingBottom="@dimen/dp6"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_with_upper_line">
        <TextView
            android:id="@+id/tv_melody_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/app_name"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/iv_play"
            style="@style/BottomControlButtonStyleBigger"
            android:layout_marginRight="@dimen/dp12"
            android:src="@mipmap/bottom_player_play" />
    </LinearLayout>
    <com.zealens.listory.view.AvatarCircleView
        android:id="@+id/circle_view"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@mipmap/default_melody_square"/>
</RelativeLayout>