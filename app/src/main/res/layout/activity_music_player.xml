<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/will_youth_player_bg"
    tools:context="com.listory.songkang.activity.MusicPlayerActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar_without_right"/>
    <ImageView
        android:id="@+id/image_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:src="@mipmap/will_youth_player_cover"/>
    <TextView
        android:id="@+id/melody_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_cover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="有志少年"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"/>
    <LinearLayout
        android:id="@+id/ll_control_panel"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_below="@id/melody_name"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_download"
            style="@style/MusicPlayerControlButtonStyle"
            android:src="@mipmap/music_player_download" />
        <ImageView
            android:id="@+id/iv_like"
            style="@style/MusicPlayerControlButtonStyle"
            android:src="@mipmap/music_player_like" />
        <ImageView
            android:id="@+id/iv_comment"
            style="@style/MusicPlayerControlButtonStyle"
            android:src="@mipmap/music_player_comment"/>
        <ImageView
            android:id="@+id/iv_share"
            style="@style/MusicPlayerControlButtonStyle"
            android:src="@mipmap/music_player_share"/>
    </LinearLayout>
    <com.listory.songkang.view.CustomSeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:paddingStart="@dimen/dp5"
        android:paddingEnd="@dimen/dp5"
        android:layout_below="@id/ll_control_panel"
        android:maxHeight="1dp"
        android:maxWidth="2dp"
        android:thumbOffset="0dp"
        android:splitTrack="false"
        android:progressDrawable="@drawable/seek_bar_bg"/>
    <RelativeLayout
        android:id="@+id/rl_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/seek_bar">
        <TextView
            android:id="@+id/tv_play_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="01:34"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/tv_play_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="01:34"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_random_repeat"
            style="@style/MusicPlayerControlButtonStyle"
            android:src="@mipmap/music_player_repeat_all"/>
        <ImageView
            android:id="@+id/iv_previous"
            style="@style/MusicPlayerControlButtonStyle"
            android:src="@mipmap/music_player_previous"/>
        <ImageView
            android:id="@+id/iv_pause_resume"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@mipmap/music_player_play"/>
        <ImageView
            android:id="@+id/iv_next"
            style="@style/MusicPlayerControlButtonStyle"
            android:src="@mipmap/music_player_next"/>
        <ImageView
            android:id="@+id/iv_list"
            style="@style/MusicPlayerControlButtonStyle"
            android:src="@mipmap/music_player_list"/>
    </LinearLayout>
</RelativeLayout>
