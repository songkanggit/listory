<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zealens.storytree.activity.coupon.CouponResultActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar_without_right"/>
    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="@dimen/dp20"
        android:src="@mipmap/activity_coupon_result_success"/>

    <TextView
        android:id="@+id/tv_success_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp26"
        android:text="@string/coupon_success_tip"
        android:textSize="@dimen/sp15"
        android:textColor="@color/color666666"
        android:layout_below="@id/iv_success"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_success_tip"
        android:layout_marginTop="@dimen/dp30">
        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp20"
            android:src="@mipmap/activity_coupon_result_vip"/>
        <TextView
            android:id="@+id/tv_product_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_toRightOf="@id/iv_vip"
            android:text="1年超级会员"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp16"/>
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:layout_toRightOf="@id/iv_vip"
            android:layout_below="@id/tv_product_info"
            android:text="至2018-09-03到期，剩余255天到期"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color666666"/>
    </RelativeLayout>
</RelativeLayout>
